@model List<RaceViewModel>;

<style>
    /* DnD themed table styling */
    .table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        font-size: 18px;
    }

        .table th {
            background-color: #f2f2f2;
            color: #333;
            font-weight: bold;
            padding: 10px;
            text-align: left;
            border-bottom: 2px solid #ddd;
        }

        .table td {
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }

        .table tbody tr:hover {
            background-color: #f5f5f5;
        }

        .table tbody tr:nth-child(even) {
            background-color: #fafafa;
        }

        /* Optional: Add DnD themed colors */
        .table .dnd-name {
            color: #8B4513; /* Brown */
            font-weight: bold;
        }

        .table .dnd-description {
            color: #4682B4; /* Steel Blue */
        }

        .table .dnd-hitdie {
            color: #2E8B57; /* Sea Green */
        }
</style>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Age Info</th>
            <th>Size Info</th>
            <th>Alignment Info</th>
            @* <th>Race Abilities</th> *@
        </tr>
    </thead>
    <tbody>
        @foreach (var race in Model)
        {
            <tr>
                <td>@race.Name</td>
                <td>@race.AgeInfo</td>
                <td>@race.SizeInfo</td>
                <td>@race.AlignmentInfo</td>
                @* <td>@string.Join(", ", race.RaceAbilities)</td> *@
            </tr>
        }
    </tbody>
</table>

